{
  "name": "browser-extension",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:content": "vite build -c config/vite.content.config.ts",
    "build:page": "vite build -c config/vite.page.config.ts",
    "build:backgound": "vite build -c config/vite.background.config.ts",
    "build:backend": "npm run build:content && npm run build:page && npm run build:backgound",
    "build:ui": "tsc -b && vite build -c config/vite.ui.config.ts",
    "build": "npm run build:ui && npm run build:backend",
    "lint": "eslint .",
    "preview": "vite preview",
    "format": "npx prettier . --write"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.3.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/chrome": "^0.1.32",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "prettier": "3.7.4",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
